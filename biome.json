{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "files": {
    "experimentalScannerIgnores": ["out/", "node_modules/", ".vscode-test/", "*.vsix"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "includes": ["out/**"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ]
}
